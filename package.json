{
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "build:docs": "pnpm run --filter docs build",
    "deploy:docs": "pnpm run --filter docs deploy",
    "test": "turbo run test",
    "lint": "eslint packages/**/**/src --ext .ts,.tsx --config .eslintrc --cache",
    "typecheck": "turbo run tsc -- --noEmit",
    "format:check": "prettier --check . --cache",
    "format:write": "prettier --write . --cache",
    "changelog": "tsx scripts/changelog.ts",
    "changelog:latest": "tsx scripts/changelog.ts --latest",
    "changelog:commit": "git add . && git commit -am 'docs: add changelog' && git push",
    "changelog:format": "prettier --write .changelog",
    "version": "changeset version",
    "release": "changeset publish",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "changeset publish --tag dev"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@changesets/get-release-plan": "4.0.0",
    "@changesets/types": "6.0.0",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/node": "^20.11.19",
    "eslint": "^8.56.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "storybook": "^7.6.17",
    "tsconfig": "workspace:*",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@8.6.10",
  "name": "@operativa/verse",
  "type": "module"
}
